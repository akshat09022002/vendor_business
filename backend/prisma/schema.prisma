generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id String @id @default(uuid())
  ownerName String
  password String
  email String @unique
  business Business[]
  phoneNo String @unique
  
}

model Business{
  id String @id @default(uuid())
  name String
  userId String
  user User @relation(fields: [userId], references: [id])
  services String[]
  description String
}

model Otp{
  id String @id @default(uuid())
  email String @unique
  phoneNo String @unique
  emailOtp String 
  phoneOtp String
  expiresAt DateTime
}

model Customer {
  id String @id @default(uuid())
  firstname String
  lastname String?
  email String? @unique
  phoneNo String @unique
  dob String
  anniversery String
  // visits 
}


